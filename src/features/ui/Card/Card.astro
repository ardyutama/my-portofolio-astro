---
import { Image } from "astro:assets";
import bpr from "@images/bpr.svg"
---

<li
  class="group flex snap-center list-none flex-col gap-2 rounded-2xl bg-white p-6 text-start text-blue-primary shadow-card"
>
  <div class="aspect-[3/2] h-[200px] w-full rounded-2xl bg-yellow-primary overflow-hidden relative">
	<div class="relative left-8 top-12 group-hover:-translate-y-4 transition-all">
		<Image src={bpr} alt="bpr" class="shadow-card"/>
	</div>
</div>
  <p class="text-[20px] font-bold">Name Projects</p>
  <p>Tech Stacks</p>
</li>
